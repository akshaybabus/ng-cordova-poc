pipeline {
   agent any
      environment {
         PATH='/usr/local/bin:/usr/bin:/bin'
      }
   stages {
      stage('NPM Setup') {
      steps {
        sh 'cd angular'
        sh 'npm install'
      }
   }
   
    stage('Angular build to cordova') {
   steps {
      sh 'ng build -op ../cordova/www/'
     } 
  }

   stage('Android Build') {
   steps {
      sh 'cordova build android'
   }
  }

 }
}