pipeline {
   agent any
      environment {
         PATH='/usr/local/bin:/usr/bin:/bin'
      }
   stages {
      stage('NPM Setup') {
      steps {
        dir('angular')
        {
            sh 'ls -l'        
            sh 'npm install'
            sh 'ng build -op ../cordova/www/'
        }
        
      }
   }
   }
}
